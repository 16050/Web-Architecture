{% extends 'base.html.twig' %}
{% block body %}
    <sport>
        <h1>{{ sport.name }}</h1>
        <p>{{ sport.description | raw }}</p>
    </sport>
    <section class="gears">
        {% for gear in sport.gears %}
            <gear>
                <h2>{{ gear.name }}</h2>
                <img src="{{ gear.image }}" alt="">
                {{ gear.description | raw }}
                <a href="{{ path('site_show', {'id': gear.id}) }}" class="btn btn-primary">See the product</a>
            </gear>
        {% endfor %}
    </section>
{% endblock %}
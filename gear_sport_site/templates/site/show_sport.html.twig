{% extends 'base.html.twig' %}
{% block body %}
    <sport>
        <h1>{{ sport.name }}</h1>
        <p>{{ sport.description | raw }}</p>
    </sport>
    <section class="gears">
        {% for gear in sport.gears %}
            <gear>
                <h2>{{ gear.name }}</h2>
                <img src="{{ gear.image }}" alt="">
                <p>
                    <a href="{{ path('site_show', {'id': gear.id}) }}" class="btn btn-success">See the product</a>
                    {% if app.user %}
                        <a href="{{ path('gear_edit', {'id': gear.id}) }}" class="btn btn-success">Edit product</a>
                        <a href="{{ path('delete_gear', {'id': gear.id}) }}" class="btn btn-primary">Delete</a>
                    {% endif %}
                </p>
            </gear>
        {% endfor %}
    </section>
{% endblock %}
{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
    <h1>Site registration</h1>
    {{ form_start(form) }}
    {{ form_row(form.username, {'attr': {'placeholder':"user name"}}) }}
    {{ form_row(form.email, {'attr': {'placeholder':"email adress"}}) }}
    {{ form_row(form.password, {'attr': {'placeholder':"password"}}) }}
    {{ form_row(form.confirm_password, {'attr': {'placeholder':"confirm password"}}) }}
    <button type="submit" class="btn btn-success">Registration!</button>
    {{ form_end(form) }}
{% endblock %}